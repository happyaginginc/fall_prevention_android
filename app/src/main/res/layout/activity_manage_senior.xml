<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="뒤로가기"
                android:src="@drawable/back_icon" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="시니어 관리하기"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Senior Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvSeniorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeniorAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대구 달성군 가창면 / 20세"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSeniorLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1등급"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/white" />

<!--                    <ImageView-->
<!--                        android:id="@+id/btnEditSenior"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:layout_marginEnd="8dp"-->
<!--                        android:src="@drawable/ic_edit"-->
<!--                        android:contentDescription="Edit" />-->

<!--                    <ImageView-->
<!--                        android:id="@+id/btnDeleteSenior"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:src="@drawable/ic_delete"-->
<!--                        android:contentDescription="Delete" />-->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Title -->
        <TextView
            android:id="@+id/tvStartSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="낙상 방지 시작하기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="16dp"
            android:useDefaultMargins="true">

            <!-- Button 1 -->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/camera_background"
                android:layout_margin="8dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/balance"
                    android:contentDescription="위험등급 측정" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="낙상 위험등급 측정"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Button 2 -->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/camera_background"
                android:layout_margin="8dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/memo"
                    android:contentDescription="결과 확인" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="낙상 위험등급\n결과 확인"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Button 3 -->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/camera_background"
                android:layout_margin="8dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/camera"
                    android:contentDescription="사진 분석" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="집 사진 AI 분석"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Button 4 -->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/camera_background"
                android:layout_margin="8dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/picture"
                    android:contentDescription="결과 확인" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="집 사진 AI 분석\n결과 확인"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>

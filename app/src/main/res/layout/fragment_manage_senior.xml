<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="시니어 관리하기"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 카드: 시니어 정보 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="대구 달성군 가창면 / 20세" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="1등급"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 기능 버튼 -->
        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="16dp">

            <!-- AI로 낙상 위험도 측정하기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_green_light"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo"
                    android:contentDescription="AI 로봇" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="AI로 낙상 위험도 측정하기"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 낙상 위험도 측정 결과 확인하기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_green_light"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo"
                    android:contentDescription="검색 아이콘" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="낙상 위험도 측정 결과 확인하기"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 낙상 예방 용품 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="낙상 예방 용품"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 집 사진 AI 분석 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo"
                    android:contentDescription="카메라 아이콘" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="집 사진 AI 분석"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 사진 앨범 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo"
                    android:contentDescription="앨범 아이콘" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="사진 앨범"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 공통 헤더 include -->
    <include
        android:id="@+id/header"
        layout="@layout/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 콘텐츠 컨테이너 -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 스크롤 가능한 회원가입 폼 -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="24dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="환영합니다! 서비스 이용을 위해 회원가입을 해주세요"
                    android:textSize="16sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="24dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <!-- 필수 항목 안내 (오른쪽 정렬) -->
                <TextView
                    android:id="@+id/tvRequiredNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#666666"
                    android:text="@string/required_note"
                    android:layout_marginBottom="20dp"/>

                <!-- 그룹: 이름 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_label"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이름을 입력해주세요"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNameError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름은 필수값입니다."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 그룹: 전화번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvPhoneLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_label"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="010-1234-5678"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPhoneError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="휴대폰 번호 양식이 올바르지 않습니다. 예) 010-1234-5678"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 그룹: 이메일 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvEmailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_label"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="example@example.com"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvEmailError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="올바른 이메일 형식이 아닙니다."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 그룹: 비밀번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvPasswordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_label"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="비밀번호를 입력해주세요"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPasswordHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영문 대 소문자, 숫자, 특수문자 조합으로 8자리 이상 입력하세요."
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvPasswordError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="비밀번호는 최소 8자리이며, 대소문자, 숫자, 특수문자를 포함해야 합니다."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 그룹: 비밀번호 확인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvPasswordConfirmLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_confirm_label"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etPasswordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="비밀번호를 한번 더 입력해주세요"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPasswordConfirmError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="비밀번호가 일치하지 않습니다."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 그룹: 개인정보 수집 동의 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <CheckBox
                            android:id="@+id/privacyCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/privacyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="개인정보 수집 동의"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:id="@+id/tvTermsDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내용 보기"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrivacyError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개인정보 수집에 동의해 주세요."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 로그인 링크 (가운데 정렬) -->
                <TextView
                    android:id="@+id/loginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_string"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>

        <!-- 회원가입 버튼 (하단 고정) -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textColor="@android:color/white"
            android:backgroundTint="#A9CF54"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
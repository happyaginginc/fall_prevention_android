<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_icon"
                android:contentDescription="뒤로가기"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="화장실"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음 조건에 맞게 화장실을 촬영해주세요"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 촬영 가이드 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫 번째 가이드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문이 있는 벽면에서 방 전체가 보이도록"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnCamera1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/camera_emoji"
                        android:contentDescription="촬영 버튼"
                        android:background="@drawable/camera_background"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/preview1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/preview_background"
                        android:contentDescription="촬영된 이미지 미리보기" />

                </LinearLayout>

            </LinearLayout>

            <!-- 두 번째 가이드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문이 있는 벽면에서 방 전체가 보이도록"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnCamera2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/camera_emoji"
                        android:contentDescription="촬영 버튼"
                        android:background="@drawable/camera_background"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/preview2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/preview_background"
                        android:contentDescription="촬영된 이미지 미리보기" />
                </LinearLayout>

            </LinearLayout>

            <!-- 세 번째 가이드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문이 있는 벽면에서 방 전체가 보이도록"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnCamera3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/camera_emoji"
                        android:contentDescription="촬영 버튼"
                        android:background="@drawable/camera_background"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/preview3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/preview_background"
                        android:contentDescription="촬영된 이미지 미리보기" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>

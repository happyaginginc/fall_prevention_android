<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/outlineColor"
    app:strokeWidth="1dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단: 방 번호 및 이름 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/roomNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginEnd="12dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/buttonGreen" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/roomNameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ex) 안방 화장실"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="@color/outlineColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/roomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/roomHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미작성 시 '카테고리 + 숫자'로 표기됩니다."
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"
            android:textColor="@color/secondaryText" />

        <!-- 가이드 텍스트 및 이미지 영역 -->
        <TextView
            android:id="@+id/tvGuide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가이드 텍스트 1"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/primaryText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvGuide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가이드 텍스트 2"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/primaryText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvGuide3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가이드 텍스트 3"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/primaryText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuide3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <!-- 하단: 방 추가 및 삭제 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/AddRoomButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="추가하기"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_plus"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/DeleteRoomButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="삭제하기"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                app:cornerRadius="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingHorizontal="24dp"
    android:gravity="center">

    <!-- 시니어 목록 -->
    <LinearLayout
        android:id="@+id/nav_senior_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_senior_list"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_senior"
            app:tint="@color/bottom_nav_color" />

        <TextView
            android:id="@+id/tv_senior_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시니어 목록"
            android:textColor="@color/bottom_nav_color"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 관련 지식 -->
    <LinearLayout
        android:id="@+id/nav_knowledge"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_knowledge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_knowledge"
            app:tint="@color/bottom_nav_color" />

        <TextView
            android:id="@+id/tv_knowledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관련 지식"
            android:textColor="@color/bottom_nav_color"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 예방 물품 -->
    <LinearLayout
        android:id="@+id/nav_prevention_goods"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_prevention_goods"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_prevention_goods"
            app:tint="@color/bottom_nav_color" />

        <TextView
            android:id="@+id/tv_prevention_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예방 물품"
            android:textColor="@color/bottom_nav_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_more"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- ic_more 라는 아이콘(직접 추가해주세요) -->
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more"
            app:tint="@color/bottom_nav_color" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:textColor="@color/bottom_nav_color"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
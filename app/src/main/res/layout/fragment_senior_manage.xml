<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- 시니어 정보 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/logo"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/seniorNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seniorAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구 달성군 가창면 / 20세"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/gradeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1등급"
                    android:backgroundTint="#FF6F00"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 기능 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/aiRiskMeasurementButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI로 낙상 위험도 측정하기"
                android:backgroundTint="#A9CF54"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/riskResultButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="낙상 위험도 측정 결과 확인하기"
                android:backgroundTint="#A9CF54"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- 낙상 예방 용품 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="낙상 예방 용품"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/aiPhotoAnalysisButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="집 사진 AI 분석"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/photoAlbumButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사진 앨범"
                android:backgroundTint="#FFCC80"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>

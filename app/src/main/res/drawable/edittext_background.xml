<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#F9F9F9" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="8dp" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 내부 패딩 (간격 늘리기) -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
